      <Button fx:id="btnSave" defaultButton="true" layoutX="213.0" layoutY="303.0" mnemonicParsing="false" onAction="#btnSaveOnAction" prefHeight="26.0" prefWidth="54.0" text="SAVE" />
      <Button fx:id="btnDelete" layoutX="333.0" layoutY="303.0" mnemonicParsing="false" onAction="#btnDeleteOnAction" text="DELETE" />
   </children>
